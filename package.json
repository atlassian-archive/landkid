{
  "name": "landkid",
  "version": "0.2.10",
  "description": "CI Queue",
  "main": "dist/index.js",
  "contributors": [
    "James Kyle <me@thejameskyle.com>",
    "Luke Batchelor <batchelor.luke@gmail.com>"
  ],
  "license": "MIT",
  "bin": {
    "landkid": "server.js"
  },
  "files": [
    "dist",
    "server.js",
    "index.js",
    "webpack.config.js"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "flow": "flow status",
    "test": "ava",
    "format": "prettier --write src/**/*.ts src/**/*.tsx",
    "build:front-end": "OUTPUT_PATH=dist/static webpack --mode=production",
    "build:ac-json": "cp ./src/static/bitbucket/atlassian-connect.json dist/static/bitbucket",
    "build:server": "tsc",
    "build": "yarn run clean && yarn build:server && yarn build:front-end && yarn build:ac-json",
    "start": "node server.js | bunyan -o short",
    "dev": "yarn build:server && yarn build:ac-json && node server.js | bunyan -o short",
    "prePublishOnly": "yarn build",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/bunyan": "^1.8.5",
    "@types/express": "^4.16.0",
    "@types/find-up": "^2.1.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.7",
    "@types/p-retry": "^2.0.0",
    "@types/react": "^16.7.5",
    "@types/react-dom": "^16.0.9",
    "@types/redis": "^2.8.7",
    "@types/redlock": "^3.0.2",
    "ava": "^0.25.0",
    "cache-loader": "^1.2.5",
    "emotion": "^9.1.3",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nock": "^9.1.6",
    "preact": "^8.2.9",
    "preact-compat": "^3.18.0",
    "prettier": "^1.8.2",
    "sinon": "^4.2.2",
    "supertest": "^3.0.0",
    "ts-loader": "^5.3.0",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "atlassian-jwt": "^1.0.1",
    "axios": "^0.17.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "date-fns": "^1.29.0",
    "express": "^4.16.2",
    "find-up": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "load-json-file": "^4.0.0",
    "lockfile": "^1.0.3",
    "morgan": "^1.9.0",
    "p-retry": "^2.0.0",
    "path-exists": "^3.0.0",
    "qs": "^6.5.2",
    "redis": "^2.8.0",
    "redlock": "^3.1.2",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.41.2",
    "sequelize-typescript": "^0.6.6",
    "sqlite3": "^4.0.4",
    "strip-indent": "^2.0.0",
    "typescript": "^3.1.6",
    "unfetch": "^3.0.0",
    "uuid": "^3.1.0",
    "webpack": "^4.8.1",
    "webpack-dev-middleware": "^3.1.3",
    "write-json-file": "^2.3.0"
  },
  "jest": {
    "resetMocks": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.tsx": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
